<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Picly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textCursorDrawable">@color/highlightBlue</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/mainBackground</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/mainBackground</item>
    </style>
    <style
        name="ToolbarTheme"
        parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">54sp</item>
    </style>

    <style name="PasswordToggleTransparent" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlHighlight">#0000</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.Round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/gallery_bottom_sheet_shape</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/highlightBlue</item>
        <item name="android:textColorPrimary">@color/mainText</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/mainText</item>
    </style>

    <style name="CalenderViewDateCustomText">
        <item name="android:textColor">@drawable/calendar_date_selector</item>
        <item name="rippleColor">@null</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/calendar_shape</item>
        <item name="android:headerBackground">@color/collectionViewCellBackground</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:colorAccent">@color/mainText</item>
        <item name="android:textColorPrimary">@color/mainText</item>
        <item name="colorControlNormal">@color/highlightBlue</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/alert_dialog_shape</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:dialogMessage">@style/NegativeButtonStyle</item>
        <item name="android:textColorPrimary">@color/mainText</item>
    </style>

    <style name="DialogDeleteTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/alert_dialog_shape</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveDeleteButtonStyle</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:dialogMessage">@style/NegativeButtonStyle</item>
        <item name="android:textColorPrimary">@color/mainText</item>
    </style>

    <style name="messageStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/mainText</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/mainText</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/highlightBlue</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="PositiveDeleteButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="detailMenuBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/detailMenuBottomSheetStyle</item>
    </style>

    <style name="detailMenuBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BottomNavigationViewCaption" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="background">@color/mainBackground</item>
    </style>
    <style name="Theme.Picly" parent="Base.Theme.Picly" />
</resources>