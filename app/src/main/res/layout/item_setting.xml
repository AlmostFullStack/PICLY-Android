<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/mainBackground"
    >
        <androidx.cardview.widget.CardView
            android:id="@+id/settingIconView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/collectionViewCellBackground"
            app:cardBackgroundColor="@color/collectionViewCellBackground"
            app:cardCornerRadius="4dp"
            android:layout_marginEnd="16dp"
            android:elevation="0dp"
            android:visibility="gone"
        >
            <ImageView
                android:id="@+id/settingIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_setting_person"
                android:contentDescription="person" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/settingTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="계정 관리"
            android:textSize="18sp"
            android:textColor="@color/mainText"
            android:fontFamily="@font/sf_pro"
            android:gravity="center_vertical"
        />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        />
        <LinearLayout
            android:id="@+id/versionLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
        >
            <TextView
                android:id="@+id/currentVersionTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="현재: 1.0.0"
                android:textSize="14sp"
                android:textColor="@color/mainText"
                android:fontFamily="@font/sf_pro"
                android:gravity="center_vertical"
                />
<!--            <TextView-->
<!--                android:id="@+id/newVersionTextView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:text="최신: 1.0.0"-->
<!--                android:layout_marginStart="16dp"-->
<!--                android:textSize="14sp"-->
<!--                android:textColor="@color/mainText"-->
<!--                android:fontFamily="@font/sf_pro"-->
<!--                android:gravity="center_vertical"-->
<!--                />-->
        </LinearLayout>
    </LinearLayout>
</layout>
