<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/albumCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center_horizontal"
        app:cardElevation="0dp"
        android:background="@color/collectionViewCellBackground"
        android:backgroundTint="@color/collectionViewCellBackground"
        app:cardBackgroundColor="@color/collectionViewCellBackground"
        android:elevation="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/collectionViewCellBackground"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/albumImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/shimmer"
                    android:background="@color/collectionViewCellBackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/default_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:background="@color/skeletonDark"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/mainText"
                />
            <View
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@color/skeletonDark"
                android:textSize="14sp"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/mainText"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>